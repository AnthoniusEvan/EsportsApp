<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonTeam" parent="Widget.Material3.Button.IconButton.Outlined" >
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">#F60000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.Montserrat" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item> <!-- Replace with your desired color -->
        <item name="android:textStyle">normal</item> <!-- Can be 'bold', 'italic', etc. -->
    </style>

    <style name="TextAppearance.Montserrat.Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item> <!-- Replace with your desired color -->
        <item name="android:textStyle">normal</item> <!-- Can be 'bold', 'italic', etc. -->
    </style>

    <style name="TextAppearance.Montserrat.Selected" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="ActionBarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/montserrat_bold</item> <!-- Montserrat font -->
        <item name="android:textColor">@android:color/white</item> <!-- Optional: Set title color -->
        <item name="android:textSize">20sp</item> <!-- Optional: Adjust size -->
    </style>
</resources>